<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="ImageEditor.BitmapImageHistogram"
	x:Name="UserControl">
	<UserControl.Resources>
		<Style x:Key="Panels">
			<Setter Property="Control.Background" Value="#FFF3F3F3"/>
		</Style>
		<Style x:Key="Adjustments">
			<Setter Property="Control.Background" Value="#FFE5E5E5"/>
		</Style>
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot">
		<StackPanel Style="{StaticResource Adjustments}">
			<Canvas Style="{StaticResource Panels}" Height="150" Margin="6">
				<Polygon x:Name="Red" Fill="#4CFF0000" Stroke="Red"/>
				<Polygon x:Name="Green" Fill="#4C00FF00" Stroke="Green"/>
				<Polygon x:Name="Blue" Fill="#4C0000FF" Stroke="Blue"/>
			</Canvas>
			<Slider Minimum="0" Maximum="255" Margin="6" Value="255"/>
			<DockPanel HorizontalAlignment="Center" Margin="0,6">
				<CheckBox Content="Red" Margin="6,0" Foreground="Red"/>
				<CheckBox Content="Green" Margin="6,0" Foreground="Green"/>
				<CheckBox Content="Blue" Margin="6,0" Foreground="Blue"/>
			</DockPanel>
		</StackPanel>
	</Grid>
</UserControl>