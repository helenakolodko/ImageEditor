<UserControl x:Class="ImageEditor.View.FileItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageEditor.View"
             mc:Ignorable="d" 
             d:DesignHeight="40">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" HorizontalAlignment="Center" Margin="6,0"/>
        <Label Content="{Binding FileName}" Grid.Column="1" Margin="6,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="{Binding FileSize}" Grid.Column="2" Margin="6,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
