<UserControl x:Class="ImageEditor.View.FileItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageEditor.View"
             mc:Ignorable="d" 
             d:DesignHeight="40">
    <Grid>
        <DockPanel LastChildFill="True">
			<Image DockPanel.Dock="Left" Width="40"  Margin="6,0"/>
			<Label DockPanel.Dock="Right" Width="50"  Content="{Binding FileSize, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:FileItem}}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
			<Label DockPanel.Dock="Left" Content="{Binding FileName, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:FileItem}}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
		</DockPanel>
	</Grid>
</UserControl>
